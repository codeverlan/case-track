  "customRoleInstructions": {
    "title": "How to Add Custom Roles",
    "description": "To add a new role, add an object to the roles array with these fields:",
    "fields": [
      {
        "name": "id",
        "type": "string",
        "description": "Unique identifier (no spaces, use underscores)",
        "example": "CUSTOM_ROLE"
      },
      {
        "name": "label",
        "type": "string",
        "description": "Display name for the role",
        "example": "Custom Role"
      },
      {
        "name": "description",
        "type": "string",
        "description": "What this role does in the case",
        "example": "Description of the custom role"
      },
      {
        "name": "category",
        "type": "string",
        "description": "Category for organization",
        "options": ["legal", "clinical", "social_services", "family", "other"]
      }
    ]
  }
