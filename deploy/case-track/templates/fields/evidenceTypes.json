  "customTypeInstructions": {
    "title": "How to Add Custom Evidence Types",
    "description": "To add a new evidence type, add an object to the types array with these fields:",
    "fields": [
      {
        "name": "id",
        "type": "string",
        "description": "Unique identifier (no spaces, use underscores)",
        "example": "CUSTOM_TYPE"
      },
      {
        "name": "label",
        "type": "string",
        "description": "Display name for the type",
        "example": "Custom Type"
      },
      {
        "name": "description",
        "type": "string",
        "description": "What this type of evidence is",
        "example": "Description of the custom evidence type"
      },
      {
        "name": "icon",
        "type": "string",
        "description": "Material Design icon name",
        "example": "folder"
      },
      {
        "name": "color",
        "type": "string",
        "description": "Color code for UI display",
        "example": "#757575"
      }
    ]
  }
}